<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Parametres">

    <TextView
        android:id="@+id/textView11"
        style="@style/TextViewFond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_titre_compte"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/ic_baseline_account_circle_24" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:text="@string/txt_changer_pseudo" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:ems="10"
        android:hint="@string/hint_nom_uti"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="@string/btn_changer_mdp" />

    <Button
        android:id="@+id/deco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="@string/btn_deco"
        app:icon="@drawable/ic_baseline_logout_24" />

    <View
        android:id="@+id/divider6"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="?android:attr/listDivider" />

    <TextView
        style="@style/TextViewFond"
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_titre_affichage"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/ic_baseline_image_24" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_mode_sombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/switch_mode_combre"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_reinit_app"
        app:backgroundTint="#777777" />
</LinearLayout>