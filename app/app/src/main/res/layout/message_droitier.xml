<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bords_arrondis"
        android:layout_margin="4dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/texte_message_dis_rep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bords_mal_ronds"
            android:gravity="end"
            android:padding="4dp"
            android:singleLine="true"
            android:text="Vérité générale?"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/texte_message_dis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="1dp"
            android:text="Ipic vaincra!"
            android:textSize="18sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>